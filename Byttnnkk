const seeds = [
  {id:'sunflower', name:'‡∏ó‡∏≤‡∏ô‡∏ï‡∏∞‡∏ß‡∏±‡∏ô', desc:'‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡πÅ‡∏î‡∏î‡∏°‡∏≤‡∏Å ‡πÇ‡∏ï‡πÄ‡∏£‡πá‡∏ß', price:10, color1:'#ffd36b', color2:'#ff9aa2'},
